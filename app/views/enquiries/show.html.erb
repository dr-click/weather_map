<% if @enquiry.has_data? %>
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="weather">
                <div class="current">
                    <div class="info">
                        <div>&nbsp;</div>
                        <div class="city"><%= @enquiry.city.capitalize %> <small><small><%= @weather_enquiry.weather["description"] %></small></small></div>
                        <div class="temp"><%= @weather_enquiry.main["temp"] %>&deg; <small>C</small></div>
                        <div class="">&uarr;<small><%= @weather_enquiry.main["temp_max"] %>&deg;C</small> - &darr;<small><%= @weather_enquiry.main["temp_min"] %>&deg;C</small> </div>
                        <div class="wind"><small><small>WIND:</small></small> <%= @weather_enquiry.wind["speed"] %> km/h</div>
                        <div>&nbsp;</div>
                    </div>
                </div>
                <div class="future">
                    <div class="day">
                        <h5>Humidity</h5>
                        <p><span><%= @weather_enquiry.main["humidity"] %>%</span></p>
                    </div>
                    <div class="day">
                        <h5>Visibility</h5>
                        <p><span><%= @weather_enquiry.visibility %> km</span></p>
                    </div>
                    <div class="day">
                        <h5>Pressure</h5>
                        <p><span><%= @weather_enquiry.main["pressure"] %> H</span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% end %>
<hr/>
<%= link_to 'Search Again', new_enquiry_path %>
